apt-get install -y --force-yes dovecot-postfix

useradd dovelda

+ /etc/sudoers
Defaults:dovelda !syslog
dovelda ALL=NOPASSWD:/usr/lib/dovecot/deliver

+ /etc/postfix/master.cf
dovecot   unix  -       n       n       -       -       pipe
  flags=DRhu user=dovelda:mail argv=/usr/bin/sudo /usr/lib/dovecot/deliver -f ${sender} -d ${recipient}

+ /etc/postfix/main.cf
dovecot_destination_recipient_limit = 1
virtual_mailbox_domains = ubuntu910.localdomain
virtual_transport = dovecot

