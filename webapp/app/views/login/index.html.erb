<%= image_tag "icons/icontexto-webdev-security-128x128.png", :alt=>"", :class=>"bigicon" %>
<h1>Login</h1>

<% form_for(@user, :url => {:controller => "Login", :action => "login"}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, :value => '' %>
  </p>

  <p>
    <%= f.submit "Login" %>
  </p>
<% end %>

<br />
<% #link_to 'Forgot your password?', resetpassword_url() %>

