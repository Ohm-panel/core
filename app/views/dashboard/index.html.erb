<p>
  Welcome,
  <%=h @user.full_name %>
</p>

<h2>Your domains</h2>
<% @user.domains.each do |domain| %>
  <p><b><%=h domain.domain %></b>
  (<%= link_to domain.path, :controller => 'domains', :action => 'edit', :id => domain.id %>)
  <%= link_to 'Delete', domain, :method => 'delete', :confirm => 'ALL DATA stored for this domain will be destroyed! Are you sure?' %><br/>

  <% domain.services.each do |service| %>
    <%= link_to (h service.name), '/service_' + service.name.downcase + '/manage/' + domain.id.to_s %>
    <!--
    <%=h service.name %>
    <% form_tag '/service_' + service.name.downcase + '/manage' do %>
      <%= hidden_field_tag 'domain_id', domain.id %>
      <%= submit_tag 'Manage' %>
    <% end %>
    -->
    <br/>
  <% end %>

  <% addable_services = @user.services.select { |s| s.by_domain } - domain.services %>
  <% if not addable_services.empty? %>
    <% form_tag '/domains/addservice' do %>
      <%= hidden_field_tag 'domain_id', domain.id %>
      <%= collection_select :service_id, nil, addable_services, :id, :name %>
      <%= submit_tag 'Add service' %>
    <% end %>
  <% end %>
  </p>
<% end %>

<p>
  <%= link_to 'Add a domain', :controller => 'domains', :action => 'new' %>
</p>

<h2>Available services</h2>
<p>
  <% @user.services.each do |s| %>
    <%=h s.name %><br/>
  <% end %>
</p>

<h2>Users</h2>
<p>
  <% @user.users.each do |u| %>
    <%=h u.full_name %><br/>
  <% end %>
</p>

